# Database
DATABASE_URL="postgresql://beta:beta123@localhost:5433/rental_marketplace?schema=public"

# JWT Secrets
JWT_ACCESS_SECRET="your-super-secret-access-token-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-change-in-production"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV=development

# Stripe (Test Mode)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Razorpay (Alternative - if using Razorpay instead)
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"

# CORS (comma-separated origins)
# For Flutter Web dev, set to your web dev origin, e.g. http://localhost:8080
# For mobile (Android emulator), CORS is not applicable but backend must be reachable via 10.0.2.2
CORS_ALLOWED_ORIGINS="http://localhost:8080,http://localhost:5173"

# Google Sign-In (optional but recommended)
# If using a single client ID across platforms, set GOOGLE_CLIENT_ID only.
# Otherwise set platform-specific ones.
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_ID_ANDROID=""
GOOGLE_CLIENT_ID_IOS=""
GOOGLE_CLIENT_ID_WEB=""

# Cloudinary (Image Storage)
# Sign up at https://cloudinary.com to get these credentials
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# AI Configuration (for AI Event Planner)
# Sign up at https://console.anthropic.com to get API key
ANTHROPIC_API_KEY=""
AI_ENABLED=true
AI_PROVIDER="anthropic"
AI_TIMEOUT_MS=8000
AI_MODEL="claude-3-haiku-20240307"
DEMO_MODE=false
